{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm ci"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "postinstall": {
      "name": "postinstall",
      "command": "npm run postinstall",
      "runAtStart": false
    },
    "start:dev": {
      "name": "start:dev",
      "command": "npm run start:dev -- --allowed-hosts .csb.app",
      "runAtStart": true,
      "preview": {
        "port": 8080
      }
    },
    "build": {
      "name": "build",
      "command": "npm run build",
      "runAtStart": false
    },
    "build:dev": {
      "name": "build:dev",
      "command": "npm run build:dev",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "npm run lint",
      "runAtStart": false
    },
    "lint:fix": {
      "name": "lint:fix",
      "command": "npm run lint:fix",
      "runAtStart": false
    },
    "lint:staged": {
      "name": "lint:staged",
      "command": "npm run lint:staged",
      "runAtStart": false
    },
    "fmt": {
      "name": "fmt",
      "command": "npm run fmt",
      "runAtStart": false
    },
    "fmt:check": {
      "name": "fmt:check",
      "command": "npm run fmt:check",
      "runAtStart": false
    },
    "test": {
      "name": "test",
      "command": "npm run test",
      "runAtStart": false
    },
    "test:watch": {
      "name": "test:watch",
      "command": "npm run test:watch",
      "runAtStart": false
    },
    "test:upgrade": {
      "name": "test:upgrade",
      "command": "npm run test:upgrade",
      "runAtStart": false
    },
    "test:coverage": {
      "name": "test:coverage",
      "command": "npm run test:coverage",
      "runAtStart": false
    },
    "test:ci": {
      "name": "test:ci",
      "command": "npm run test:ci",
      "runAtStart": false
    },
    "prepare": {
      "name": "prepare",
      "command": "npm run prepare",
      "runAtStart": false
    }
  }
}
