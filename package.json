{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/arnavyash/react-app-boilerplate.git",
  "author": "Arnav Yash <arnavyash2004@gmail.com>",
  "license": "0BSD",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "lefthook install",
    "start:dev": "webpack serve --env development",
    "build": "rimraf dist && webpack --env production",
    "build:dev": "rimraf dist && webpack --env development",
    "lint": "eslint --format=pretty --cache --ext js,jsx .",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "eslint --format=pretty --ext js,jsx --fix",
    "fmt": "cross-env prettier --write '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "fmt:check": "cross-env prettier-check '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:upgrade": "npm test -- --updateSnapshot",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test -- --ci",
    "prepare": "lefthook install"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/config/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!**/dist/**",
      "!src/index.js",
      "!.eslintrc.js",
      "!.prettierrc.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "testURL": "http://localhost:8085"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@babel/core": "7.17.10",
    "@babel/preset-env": "7.17.10",
    "@babel/preset-react": "7.16.7",
    "babel-jest": "27.5.1",
    "babel-loader": "8.2.5",
    "cross-env": "7.0.3",
    "eslint": "8.16.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-formatter-pretty": "4.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-webpack-plugin": "3.1.1",
    "html-loader": "3.1.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "prettier-check": "2.0.0",
    "react-test-renderer": "17.0.2",
    "rimraf": "3.0.2",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.2",
    "webpack-merge": "5.8.0",
    "webpackbar": "5.0.2"
  },
  "dependencies": {
    "app-root-path": "3.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
