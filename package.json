{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/arnavyash/react-app-boilerplate.git",
  "author": "Arnav Yash <arnavyash2004@gmail.com>",
  "license": "0BSD",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "lefthook install",
    "start:dev": "webpack serve --env development",
    "build": "rimraf dist && webpack --env production",
    "build:dev": "rimraf dist && webpack --env development",
    "lint": "eslint --format=pretty --cache --ext js,jsx,ts,tsx .",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "eslint --format=pretty --ext js,jsx --fix",
    "fmt": "cross-env prettier --write '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "fmt:check": "cross-env prettier --check '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:upgrade": "npm test -- --updateSnapshot",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test -- --ci",
    "prepare": "lefthook install"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/config/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!**/dist/**",
      "!src/index.js",
      "!.eslintrc.js",
      "!.prettierrc.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost:8085"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@babel/core": "7.23.5",
    "@babel/preset-env": "7.23.5",
    "@babel/preset-react": "7.23.3",
    "@babel/preset-typescript": "7.23.3",
    "@types/jest": "29.5.10",
    "@types/node": "20.10.3",
    "@types/react": "18.2.41",
    "@types/react-dom": "18.2.17",
    "@types/react-test-renderer": "18.0.7",
    "@types/webpack": "5.28.3",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "babel-jest": "29.7.0",
    "babel-loader": "9.1.3",
    "cross-env": "7.0.3",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.1.1",
    "eslint-formatter-pretty": "5.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-webpack-plugin": "4.0.1",
    "fork-ts-checker-webpack-plugin": "8.0.0",
    "html-loader": "4.2.0",
    "html-webpack-plugin": "5.5.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "prettier": "3.0.3",
    "react-test-renderer": "18.2.0",
    "rimraf": "5.0.5",
    "typescript": "5.2.2",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1",
    "webpack-merge": "5.9.0",
    "webpackbar": "5.0.2"
  },
  "dependencies": {
    "app-root-path": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
